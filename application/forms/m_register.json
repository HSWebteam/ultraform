{
    "elements": {
        "open": {
        	"name": "open",
        	"type": "open"
        },
        "username": {
        	"name": "username",
        	"type": "text",
        	"rules": "required|min_length[5]|max_length[12]"
        },
        "hiddentest": {
            "name": "hiddentest",
            "type": "hidden",
            "rules": "required|min_length[5]|max_length[12]"
        },
        "email": {
            "name": "email",
            "type": "text",
            "rules": "required|valid_email"
        },        
        "password": {
        	"name": "password",
        	"type": "password",
        	"rules": "required|min_length[5]"
        },
        "password_repeat": {
            "name": "password_repeat",
            "type": "password",
            "rules": "required|matches[password]"
        },
        "avatar": {
            "name": "avatar",
            "type": "upload",
            "rules": "required"
        },
        "submit": {
        	"name": "submit",
        	"type": "submit"
        },
        "close": {
        	"name": "close",
        	"type": "close"
        }
    }
}